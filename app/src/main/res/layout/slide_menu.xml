<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="225dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:elevation="100dp"
    android:orientation="vertical"
    android:scrollbarFadeDuration="0">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_logo" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/logo"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="48dp"
        android:background="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:orientation="vertical"
        android:fillViewport="false"
        android:paddingBottom="20dp"
        android:scrollbarSize="1dp"
        android:scrollbarStyle="insideOverlay">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_profile"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Profile"
                android:textAlignment="textEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nearby"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_nearby"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Nearby"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/postrequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_post"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Post a Request"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/myrequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_post_mine"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="My Requests"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/searchdonor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_search_donors"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Search Donors"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/search_bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_search_banks"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Search blood bank"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_pin"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="What's my Pincode?"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/updateNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_update_num"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Update Number"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/updatepassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_update_pass"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Update Password"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/forgot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_action_fp"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Forgot Password?"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_logout"
                android:drawablePadding="16dp"
                android:padding="8dp"
                android:text="Logout"
                android:textAlignment="viewEnd"
                android:textAllCaps="false"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Small"
                android:textColor="#ffffff"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
